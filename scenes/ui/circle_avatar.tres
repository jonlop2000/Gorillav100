    float dist = distance(UV, vec2(0.5, 0.5));
    // Outside a radius of 0.5 (half the texture) â†’ transparent
    if (dist > 0.5) {
        discard;
    }
    // Otherwise draw normally
    COLOR = texture(TEXTURE, UV) * COLOR;
}
